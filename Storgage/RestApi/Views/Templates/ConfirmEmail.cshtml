@model Weezlabs.Storgage.DataTransferObjects.ViewModels.Account.ConfirmEmailViewModel
<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div>
        Someone requested that the email for you Storgage account be confirm.
    </div>
    <br /><br />
    <div>
        Copyable link: <a href='@Model.Link'>@Model.Link</a>
    </div>
    <br /><br />
